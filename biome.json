{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/src/**/*",
      "**/.vscode/**/*",
      "**/index.html",
      "**/vite.config.js",
      "!**/src/styles.css",
      "!**/src/routeTree.gen.ts",
      "!**/src/convex/**/*",
      "!**/convex/**/*",
      "!**/convex.config.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": "off",
        "noNestedTernary": "off",
        "useFilenamingConvention": "off"
      },
      "nursery": {
        "useConsistentArrowReturn": "off",
        "noEmptySource": "off",
        "useSortedClasses": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noExplicitAny": "off",
        "noSkippedTests": "off"
      },
      "performance": {
        "noNamespaceImport": "off",
        "noImgElement": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "info"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "extends": ["ultracite/core", "ultracite/remix"]
}
